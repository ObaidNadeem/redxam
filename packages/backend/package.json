  "scripts": {
    "start": "SERVICE='server' tsnd -r tsconfig-paths/register src",
    "start:vaults": "PORT=3010 SERVICE='vaults' tsnd -r tsconfig-paths/register src",
    "start:binance": "PORT=3011 SERVICE='binance' tsnd -r tsconfig-paths/register src",
    "start:wallets": "PORT=3012 SERVICE='wallets' tsnd -r tsconfig-paths/register src",
    "start:balance": "PORT=3013 SERVICE='balance' tsnd -r tsconfig-paths/register src",
    "start:portfolio": "PORT=3014 SERVICE='portfolio' tsnd -r tsconfig-paths/register src",
    "start:webhooks": "PORT=3015 SERVICE='webhooks' tsnd -r tsconfig-paths/register src",
    "start:dev": "NODE_ENV='development' SERVICE='server' PORT=5005 tsnd -r tsconfig-paths/register src",
    "start:dev:balance": "NODE_ENV='development' PORT=5013 SERVICE='balance' tsnd -r tsconfig-paths/register src",
    "start:dev:binance": "NODE_ENV='development' PORT=5011 SERVICE='binance' tsnd -r tsconfig-paths/register src",
    "start:dev:portfolio": "NODE_ENV='development' PORT=5014 SERVICE='portfolio' tsnd -r tsconfig-paths/register src",
    "start:dev:vaults": "NODE_ENV='development' PORT=5010 SERVICE='vaults' tsnd -r tsconfig-paths/register src",
    "start:dev:webhooks": "NODE_ENV='development' PORT=5015 SERVICE='webhooks' tsnd -r tsconfig-paths/register src",
    "start:dev:wallets": "NODE_ENV='development' PORT=5012 SERVICE='wallets' tsnd -r tsconfig-paths/register src",
    "start:dev:testnet": "TYPE_CHAIN=testnet NODE_ENV='development' tsnd -r tsconfig-paths/register src",
    "start:prod": "SERVICE='server' PORT=3000 node dist/index.js",
    "start:prod:max": "SERVICE='server' PORT=5005 node dist/index.js",
    "start:prod:vaults": "PORT=3001 SERVICE='vaults' node dist/index.js",
    "start:prod:binance": "PORT=3002 SERVICE='binance' node dist/index.js",
    "start:prod:wallets": "PORT=3003 SERVICE='wallets' node dist/index.js",
    "start:prod:balance": "PORT=3004 SERVICE='balance' node dist/index.js",
    "start:prod:portfolio": "PORT=3005 SERVICE='portfolio' node dist/index.js",
    "start:prod:webhooks": "PORT=3006 SERVICE='webhooks' node dist/index.js",
    "build:ts": "doppler run -- tsc && tscpaths -o dist -s src -p tsconfig.json",
    "build:assets": "cp -r src/assets src/emails dist",
    "build:schema": "cp src/schema/schema.graphql dist/schema",
    "build:docker": "docker build . --tag \"redxam-api:latest\"",
    "build": "npm run build:ts && npm run build:assets && npm run build:schema",
    "lint": "eslint --fix .",
    "changeacc": "NODE_ENV='development' tsnd -r tsconfig-paths/register src/cli/changeacc",
    "changeacc:prod": "NODE_ENV='production' tsnd -r tsconfig-paths/register src/cli/changeacc",
    "test": "jest --setupFiles dotenv/config"
  },
